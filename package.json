{
  "name": "ts-electron-boilerplate",
  "version": "0.0.0",
  "description": "Boilerplate for creating a electron all with react and typescript.",
  "repository": {
    "type": "git",
    "url": "https://github.com/weikinhuang/ts-electron-bootstrap"
  },
  "license": "MIT",
  "main": "app/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron app",
    "server": "webpack-dev-server --progress --config webpack.config.js --inline --hot --content-base app/",
    "lint-css": "stylelint \"src/**/*.css\"",
    "lint-ts": "tslint \"src/**/*.ts?(x)\"",
    "lint": "npm run lint-css && npm run lint-ts",
    "test": "jasmine JASMINE_CONFIG_PATH=./test/jasmine/jasmine.json",
    "test:watch": "nodemon --ext ts,tsx --watch src --watch test/jasmine/spec node_modules/jasmine/bin/jasmine.js JASMINE_CONFIG_PATH=./test/jasmine/jasmine.json",
    "tcm": "tcm src",
    "prepackage": "npm run tcm && cross-env NODE_ENV=production webpack",
    "package": "npm run prepackage && build --dir",
    "build": "npm run prepackage && build --x64",
    "build-mac": "npm run prepackage && build --mac --x64",
    "build-win": "npm run prepackage && build --win --x64",
    "build-linux": "npm run prepackage && build --linux --x64",
    "archive-builds": "tar -zcf builds.tar.gz dist/"
  },
  "directories": {
    "buildResources": "install-resources"
  },
  "devDependencies": {
    "@types/enzyme": "^2.5.39",
    "@types/jasmine": "^2.5.40",
    "@types/node": "^6.0.38",
    "@types/react": "^0.14.33",
    "@types/react-dom": "^0.14.16",
    "@types/react-redux": "^4.4.35",
    "asar": "^0.12.4",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.1",
    "devtron": "^1.3.0",
    "electron": "^1.3.4",
    "electron-builder": "^10.15.1",
    "electron-config": "^0.2.1",
    "electron-debug": "^1.0.1",
    "electron-devtools-installer": "^2.0.1",
    "enzyme": "^2.7.0",
    "eslint-config-closedinterval": "^2.1.3",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.22.0",
    "ignore-styles": "^5.0.1",
    "jasmine": "^2.5.2",
    "nodemon": "^1.11.0",
    "postcss-advanced-variables": "^1.2.2",
    "postcss-atroot": "^0.1.3",
    "postcss-cssnext": "^2.9.0",
    "postcss-loader": "^1.2.1",
    "postcss-nested": "^1.0.0",
    "style-loader": "^0.13.1",
    "stylelint-config-closedinterval": "^1.1.0",
    "ts-loader": "^1.3.3",
    "ts-node": "^2.0.0",
    "tslint": "^4.2.0",
    "typed-css-modules": "^0.1.13",
    "typed-css-modules-loader": "0.0.4",
    "typescript": "^2.1.4",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.0-rc.3",
    "webpack-dev-server": "^2.2.0-rc.0",
    "webpack-fail-plugin": "^1.0.5",
    "webpack-notifier": "^1.4.1",
    "worker-loader": "^0.7.1"
  },
  "dependencies": {
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-redux": "^5.0.1",
    "redux": "^3.5.2"
  }
}
